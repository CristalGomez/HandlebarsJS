{{!-- create a button that will submit the user input into the database --}}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="diy">Make Your Menu</h1>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Your Menu</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
          {{> burgers-block devoured=false}}
          {{/unless}}
          {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Nvm, Not on the Menu</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
          {{> burgers-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

{{!-- input box & submit button --}}
<div class="container">
  <div class="row">

    <div class="col-md-12">
      <h2>Add to the Menu!</h2>
      <form class="create-form" action="/" method="POST">

        <div align="middle" class="form-group">
          <input align="middle" type="text" id="ca" name="name">
          <button class="btn-dark" type="submit">Add</button>
        </div>
      </form>
    </div>

  </div>
</div>